<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <Button 
        android:id="@+id/call_btn"
        android:layout_width="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/call_button"
        />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/border_image_blue"
        android:padding="4dp">
        	<ImageView 
        	    android:id="@+id/contact_photo"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@drawable/people_2"/>
    </LinearLayout>
    </LinearLayout>
    <TableLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_weight="1">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        	<TextView 
        	    android:id="@+id/contact_name_txt"
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:text="Name Lastname"
        	    android:textStyle="bold"
        	    android:textColor="#336cb1"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        	<TextView 
        	    android:id="@+id/contact_career_txt"
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:text="Career"
        	    android:textColor="#000000"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
         	<TextView 
        	    android:id="@+id/contact_phone_txt"
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:text="+66845xxxxxx"
        	    android:textColor="#000000"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
         	<TextView 
        	    android:id="@+id/contact_email_txt"
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:text="myemail@gmail.com"
        	    android:textColor="#000000"/>
        </TableRow>

    </TableLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp" >

            <ImageView
                android:id="@+id/gplus_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/googleplus" />

            <ImageView
                android:id="@+id/facebook_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/facebook" />

            <ImageView
                android:id="@+id/twitter_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/twitter" />

        </LinearLayout>

</LinearLayout>